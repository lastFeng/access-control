<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.learn.accesscontrol.domain.Employee">
    <resultMap id="resultMap" type="com.learn.accesscontrol.domain.Employee">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="email" property="email" />
        <result column="age" property="age" />
        <result column="admin" property="admin" />
        <association property="department" column="department_id" javaType="com.learn.accesscontrol.domain.Department">
            <id column="id" property="id"/>
            <result column="name" property="name" />
            <result column="sn" property="sn" />
        </association>
        <collection property="roles" column="role_id" ofType="com.learn.accesscontrol.domain.Role">
            <id column="id" property="id" />
            <result column="name" property="name" />
            <result column="sn" property="sn" />
            <collection property="permissions" column="permission_id" ofType="com.learn.accesscontrol.domain.Permission">
                <id column="id" property="id" />
                <result column="express" property="express" />
                <result column="name" property="name" />
            </collection>
            <collection property="menus" column="menu_id" ofType="com.learn.accesscontrol.domain.Menu">
                <id column="id" property="id" />
                <result column="name" property="name" />
            </collection>
        </collection>
    </resultMap>


</mapper>